!!! 5
%html{lang: 'en'}
  %head
    %title #{current_page.data.title || "React"}
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="")
    %meta(name="author" content="")
    %meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}

    %link(rel="shortcut icon" href="/images/favicon.png")

    -# Styles
    %link{:href => "http://fonts.googleapis.com/css?family=Bitter:400,700", :rel => "stylesheet"}
    %link{:href => "http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic", :rel => "stylesheet"}

    = stylesheet_link_tag 'main'
    - if data.page.stylesheet
      = stylesheet_link_tag data.page.stylesheet

    -# Javascripts
    = javascript_include_tag 'vendor/jquery-2.1.3'
    = javascript_include_tag 'lib/app'
    - if data.page.scripts
      = javascript_include_tag data.page.scripts

  %body{class: current_page.data.body_class || 'page', onunload: ""}

    = partial(:"/layouts/partials/header")

    .column.full-col.main-content
      #content-container.container
        = yield
